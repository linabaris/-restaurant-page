.header__menu 
    .header__logo.logo
        img(src="./assets/icons/LOGO.svg" alt="logo")
    .header__nav.nav
        ul.nav__list
            li.nav__item
                a(href="#") ГЛАВНАЯ 
            li.nav__item
                a(href="#menu") МЕНЮ
            li.nav__item
                a(href="#about") О НАС
            li.nav__item
                a(href="#book") БРОНЬ
            li.nav__item
                a.nav__cart.cart__icon(href="#" data-trigger=".cart")
                    img.nav__cart-icons(src="./assets/icons/cart.svg" alt="cart" width='30px' height='30px')
    .header__actions.actions
        .actions__contact
            .actions__telephone
                .actions__icon.telephone-icon
                    img(src="./assets/icons/phone.svg" alt="telephone")
                .actions__number
                    span +999-888-76-54
            .actions__text
                span Свяжитесь с нами для бронирования
        .actions__book
            +button({type:'book', text:'ЗАКАЗ СТОЛИКА', atributes: true, name_atr:'trigger'})
    .header__burger.burger
        button.burger__button(type='button' id='navToggle')
            img.burger__icon(src="./assets/icons/menu_burger.svg", alt="menu_burger")